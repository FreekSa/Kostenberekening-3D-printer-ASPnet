@model Print
@{
    ViewBag.Title = "BerekenKost";
}

<h2>Bereken hier je kostprijs</h2>

<form asp-action="BerekenKost">
    <label asp-for="@Model.KostPerRol"></label>
    <input asp-for="@Model.KostPerRol" />
    <label asp-for="@Model.AantalMeterPrint"></label>
    <input asp-for="@Model.AantalMeterPrint" />
    <label asp-for="@Model.Duurtijd"> in minuten</label>
    <input asp-for="@Model.Duurtijd" />
    <input type="submit" value="Berekenen" class="btn btn-primary" />
</form>

    <span>Kost per print: @Model.KostPerPrint</span>


